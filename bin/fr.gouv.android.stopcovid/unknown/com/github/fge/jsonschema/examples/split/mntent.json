{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "mntent",
    "description": "An fstab entry",
    "type": "object",
    "properties": {
        "device": {
            "type": "string"
        },
        "fstype": {
            "type": "string"
        },
        "options": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
        },
        "dump": {
            "type": "integer",
            "minimum": 0
        },
        "fsck": {
            "type": "integer",
            "minimum": 0
        }
    },
    "required": [ "device", "fstype" ],
    "additionalItems": false
}
{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "/etc/fstab",
    "description": "JSON representation of /etc/fstab",
    "fstab": {
        "type": "object",
        "properties": {
            "swap": {
                "$ref": "#/mntent"
            }
        },
        "patternProperties": {
            "^/([^/]+(/[^/]+)*)?$": {
                "$ref": "#/mntent"
            }
        },
        "required": [ "/", "swap" ],
        "additionalProperties": false
    },
    "mntent": {
        "title": "mntent",
        "description": "An fstab entry",
        "type": "object",
        "properties": {
            "device": {
                "type": "string"
            },
            "fstype": {
                "type": "string"
            },
            "options": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string" }
            },
            "dump": {
                "type": "integer",
                "minimum": 0
            },
            "fsck": {
                "type": "integer",
                "minimum": 0
            }
        },
        "required": [ "device", "fstype" ],
        "additionalItems": false
    }
}